<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FTask">

        <activity
            android:name=".ui.auth.CompleteProfileActivity"
            android:exported="false" />

        <service
            android:name=".service.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyDcHWb-YPhkGk9er_TwN6A4xTV21Wi0Iq8" />

        <activity android:name=".ui.home.AddressListActivity" />
        <activity android:name=".ui.message.ChatDetailActivity"
            android:exported="false" />
        <activity android:name=".ui.home.OrderCleaningActivity" />
        <activity android:name=".ui.home.ScheduleActivity" />
        <activity android:name=".ui.home.ConfirmOrderActivity" />
        <activity android:name=".ui.auth.RegisterActivity" />
        <activity android:name=".ui.auth.VerifyActivity" />

        <!-- LoginActivity - Launcher -->
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MainActivity - Nhận Deep Link từ VNPay -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTask">

            <!-- Deep Link cho VNPay callback (nạp tiền ví) -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="ftask"
                    android:host="payment"
                    android:pathPrefix="/callback" />
            </intent-filter>

            <!-- Deep Link cho thanh toán booking -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="ftask"
                    android:host="booking-payment"
                    android:pathPrefix="/callback" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.home.MapPickerActivity" />
    </application>

</manifest>