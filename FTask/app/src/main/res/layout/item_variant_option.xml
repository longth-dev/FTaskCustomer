<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutVariantItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_option_unselected"
    android:padding="14dp"
    android:layout_marginBottom="10dp">

    <TextView
        android:id="@+id/txtVariantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên gói"
        android:textStyle="bold"
        android:textColor="#333"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/txtVariantDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mô tả gói"
        android:textColor="#888"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/txtVariantPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0đ"
        android:textColor="#4CAF50"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginTop="4dp"/>
</LinearLayout>
