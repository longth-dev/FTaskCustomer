<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Tiêu đề -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xác nhận và thanh toán"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_marginBottom="20dp" />

        <!-- Vị trí làm việc -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vị trí làm việc"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#333"
            android:layout_marginBottom="6dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@drawable/bg_option_unselected"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bùi Quang Là phường 12"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#333" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="54/59 Bùi Quang Là, phường 12, Gò Vấp, Hồ Chí Minh"
                android:textSize="14sp"
                android:textColor="#777"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Thông tin công việc -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin công việc"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#333"
            android:layout_marginBottom="6dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@drawable/bg_option_unselected"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📅 Ngày làm việc:"
                android:textStyle="bold"
                android:textColor="#333" />

            <TextView
                android:id="@+id/txtJobDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chưa chọn"
                android:textColor="#777"
                android:layout_marginBottom="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⏰ Giờ làm:"
                android:textStyle="bold"
                android:textColor="#333" />

            <TextView
                android:id="@+id/txtJobTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--:--"
                android:textColor="#777"
                android:layout_marginBottom="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⌛ Lặp lại hàng tuần:"
                android:textStyle="bold"
                android:textColor="#333" />

            <TextView
                android:id="@+id/txtRepeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Không"
                android:textColor="#777"
                android:layout_marginBottom="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📝 Ghi chú:"
                android:textStyle="bold"
                android:textColor="#333" />

            <TextView
                android:id="@+id/txtJobNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Không có"
                android:textColor="#777" />
        </LinearLayout>

        <!-- Phương thức thanh toán -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phương thức thanh toán"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#333"
            android:layout_marginBottom="6dp" />

        <!-- Tiền mặt -->
        <LinearLayout
            android:id="@+id/layoutCash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@drawable/bg_option_unselected"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/money"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiền mặt"
                android:textColor="#333"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Thẻ ATM -->
        <LinearLayout
            android:id="@+id/layoutCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@drawable/bg_option_unselected"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/atmcard"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thẻ ATM / Ví điện tử"
                android:textColor="#333"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Tổng cộng -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tổng cộng"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#333" />

            <TextView
                android:id="@+id/txtTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="240,000 VND"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#4CAF50" />
        </LinearLayout>

        <!-- Nút Đăng việc -->
        <TextView
            android:id="@+id/btnPostJob"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Đăng việc"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:textSize="16sp"
            android:background="@drawable/bg_button_orange" />
    </LinearLayout>
</ScrollView>
