<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="4dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/txtBookingId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mã đặt chỗ: BK001"
            android:textStyle="bold"
            android:textColor="#111111"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtBookingDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày: 09/11/2025"
            android:textColor="#444444"
            android:textSize="14sp"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/txtBookingPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giá: 1.200.000đ"
            android:textColor="#444444"
            android:textSize="14sp"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/txtBookingStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trạng thái: Đang xử lý"
            android:textColor="#008577"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/txtBookingNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ghi chú: Khách yêu cầu giao buổi sáng"
            android:textColor="#666666"
            android:textSize="13sp"
            android:layout_marginTop="2dp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
