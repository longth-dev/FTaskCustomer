<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Avatar Container -->
        <FrameLayout
            android:id="@+id/avatarContainer"
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_avatar_placeholder" />

            <!-- Online Status -->
            <ImageView
                android:id="@+id/imgOnlineStatus"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="bottom|end"
                android:layout_margin="2dp"
                android:background="@drawable/bg_online_status"
                android:visibility="gone" />

        </FrameLayout>

        <!-- Partner Name -->
        <TextView
            android:id="@+id/txtPartnerName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Tên Partner"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/txtTime"
            app:layout_constraintStart_toEndOf="@id/avatarContainer"
            app:layout_constraintTop_toTopOf="@id/avatarContainer" />

        <!-- Last Message -->
        <TextView
            android:id="@+id/txtLastMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Tin nhắn cuối cùng..."
            android:textColor="#666666"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@id/txtUnreadCount"
            app:layout_constraintStart_toEndOf="@id/avatarContainer"
            app:layout_constraintTop_toBottomOf="@id/txtPartnerName" />

        <!-- Time -->
        <TextView
            android:id="@+id/txtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 phút"
            android:textColor="#999999"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/avatarContainer" />

        <!-- Unread Count Badge -->
        <TextView
            android:id="@+id/txtUnreadCount"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/bg_unread_badge"
            android:gravity="center"
            android:text="3"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/avatarContainer"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>